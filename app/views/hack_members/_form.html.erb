<div class="row">
  <div class="large-12 columns">
<%= form_for(@hack_member) do |f| %>
  <% if @hack_member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@hack_member.errors.count, "error") %> prohibited this hack_member from being saved:</h2>

      <ul>
      <% @hack_member.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <legend>Member details</legend>
    <div class="row">
      <div class="large-2 columns">
        <div class="field">
          <%= f.label :title %><br>
          <%= f.select :title, ['Mr', 'Ms', 'Mrs', 'Dr'] %>
        </div>
      </div>

      <div class="large-2 columns">
        <div class="field">
          <%= f.label :initials %><br>
          <%= f.text_field :initials %>
        </div>
      </div>
      <div class="large-4 columns">
        <div class="field">
          <%= f.label :first_name %><br>
          <%= f.text_field :first_name %>
        </div>
      </div>

      <div class="large-4 columns">
        <div class="field">
          <%= f.label :surname %><br>
          <%= f.text_field :surname %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="large-4 columns">
        <div class="field">
          <%= f.label :tel_home %><br>
          <%= f.text_field :tel_home %>
        </div>
      </div>
      <div class="large-4 columns">
        <div class="field">
          <%= f.label :tel_office %><br>
          <%= f.text_field :tel_office %>
        </div>
      </div>
      <div class="large-4 columns">
        <div class="field">
          <%= f.label :tel_cell %><br>
          <%= f.text_field :tel_cell %>
        </div>
      </div>
    </div>
  </fieldset>

  <fieldset>
    <legend>Email</legend>

    <div class="row">
      <div class="large-4 columns">
        <div class="field">
          <%= f.label :email %><br>
          <%= f.text_field :email %>
        </div>
      </div>
      <div class="large-2 columns">
        <div class="field">
          <%= f.label :email_ok %><br>
          <%= f.check_box :email_ok %>
        </div>
      </div>
      <div class="large-6 columns">
        <div class="field">
          <%= f.label :email_issues %><br>
          <%= f.text_field :email_issues %>
        </div>
      </div>
    </div>
  </fieldset>


  <div class="row">
    <div class="large-12 columns">
      <div class="field">
        <%= f.label :comments %><br>
        <%= f.text_area :comments %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="large-2 columns">
      <div class="field">
        <%= f.label :non_hacker %><br>
        <%= f.check_box :non_hacker %>
      </div>
    </div>
    <div class="large-5 columns">
      <div class="field">
        <%= f.label :contact_via %><br>
        <%= f.number_field :contact_via %>
      </div>
    </div>
    <div class="large-5 columns">
      <div class="field">
        <%= f.label :group_with %><br>
        <%= f.number_field :group_with %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="large-2 columns">
      <div class="field">
        <%= f.label :hack_attendances_count, 'Hack attendances' %><br>
        <%= f.text_field :hack_attendances_count, :readonly => true %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= f.submit :class => 'button' %>
  </div>
<% end %>
</div>
</div>
