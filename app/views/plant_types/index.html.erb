<div class="row">
  <div class="large-12 columns">
    <h1>Plant types</h1>
  </div>
</div>

<div class="row">
  <div class="large-12 columns">
    <%= link_to 'New Plant type', new_plant_type_path, :class => 'button' %>
  </div>
</div>

<div class="row">
  <div class="large-12 columns">

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Notes</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
      <% @plant_types.each do |plant_type| %>
        <tr>
        <td><%= plant_type.name %></td>
        <td><%= plant_type.notes %></td>
        <td><%= link_to 'Show', plant_type %></td>
        <td><%= link_to 'Edit', edit_plant_type_path(plant_type) %></td>
        <td><%= link_to 'Destroy', plant_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
      </tbody>
    </table>
  </div>
</div>

