/* Reset some Bootstrap behaviour that interferes with ContextMenu. */
.context-menu-item > [class^="icon-"], [class*=" icon-"] {
 display: inherit; /*inline-block;*/
 width: inherit; /*14px;*/
 height: inherit; /*14px;*/
}
.slickGridContextMenu {
  color: inherit;
  /* background: inherit; */
  font-weight: normal;
  padding: 1px 5px;
}
